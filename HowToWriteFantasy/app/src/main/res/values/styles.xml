<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:itemBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionMenuTextColor">@color/colorAccent</item>
        <item name="android:selectableItemBackground">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="AppTheme.Popup" parent="ThemeOverlay.AppCompat.Dark">
    </style>

    <style name="AppTheme.Tile">
        <item name="android:layout_margin">@dimen/margin_tiles</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/header</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Tile.Default">
        <item name="android:padding">@dimen/padding_tiles_inside</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>
