<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.glenn.howtowritefantasy.activities.CharacterDevActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/tb_menu"/>

    <TextView
        android:id="@+id/guidelines"
        android:layout_below="@id/tb_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Guidelines"
        android:textStyle="bold"
        android:textSize="@dimen/sub_header"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:layout_below="@id/tb_menu"
        android:layout_alignParentEnd="true"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_below="@id/tb_menu"
        android:id="@+id/blank_clickable_general"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@id/guidelines"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/character_divider_1"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/heroes"
        android:layout_below="@id/character_divider_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heroes"
        android:textStyle="bold"
        android:textSize="@dimen/sub_header"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:layout_below="@id/character_divider_1"
        android:layout_alignParentEnd="true"
        android:paddingEnd="@dimen/activity_horizontal_margin"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_below="@id/character_divider_1"
        android:id="@+id/blank_clickable_heroes"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@id/heroes"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/character_divider_2"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/secondary_characters"
        android:layout_below="@id/character_divider_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secondary Characters"
        android:textStyle="bold"
        android:textSize="@dimen/sub_header"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:layout_below="@id/character_divider_2"
        android:layout_alignParentEnd="true"
        android:paddingEnd="@dimen/activity_horizontal_margin"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_below="@id/character_divider_2"
        android:id="@+id/blank_clickable_secondary"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@id/secondary_characters"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/character_divider_3"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/villains"
        android:layout_below="@id/character_divider_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Villains"
        android:textStyle="bold"
        android:textSize="@dimen/sub_header"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:layout_below="@id/character_divider_3"
        android:layout_alignParentEnd="true"
        android:paddingEnd="@dimen/activity_horizontal_margin"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_below="@id/character_divider_3"
        android:id="@+id/blank_clickable_villains"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@id/villains"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"/>


</RelativeLayout>
